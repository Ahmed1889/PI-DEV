{% extends 'base2.html.twig' %}

{% block body %}
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="">Demande de congé</h4>

            </div>
        </div>
    </div>

    <h1>Conge edit</h1>

    <table class="table table-striped">
        {{ form_start(edit_form) }}
        <tr>
            <td>{{ form_label(edit_form.dateDebut)  }}</td>
            <td>{{ form_widget(edit_form.dateDebut,{ 'attr': {'class': 'form-control '}})  }}{{ form_errors(edit_form.dateDebut) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(edit_form.dateFin)  }}</td>
            <td>{{ form_widget(edit_form.dateFin,{ 'attr': {'class': 'form-control '}})  }}</td>
        </tr>
        <tr>
            <td>{{ form_label(edit_form.type)  }}</td>
            <td>{{ form_widget(edit_form.type,{ 'attr': {'class': 'form-control '}})  }}</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Demander" class="btn btn-success" /></td>
        </tr>
        {{ form_end(edit_form)  }}
    </table>
    <ul>
        <li>
            <a href="{{ path('conge_index') }}">Back to the list</a>
        </li>
        <li>
            <td><a class="confirmModal" href="{{ path ('deleteC',{'id':conge.id}) }}">Supprimer</a></td>
        </li>
    </ul>
    <div id="dialog-confirm" title="Confirmation de la suppression" style="display:none;">
        <p>
            <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>
            Etes-vous sûr de supprimer cet Congé?
        </p>
    </div>

{% endblock %}
{% block js2 %}
    <script>
        $(document).ready(function () {


            $('#backbundle_conge_dateDebut_month').val(new Date().getMonth()+1);
            $('#backbundle_conge_dateDebut_year').val(new Date().getFullYear());
            $('#backbundle_conge_dateDebut_day').val(new Date().getDate()+1);
            $('#backbundle_conge_dateFin_month').val(new Date().getMonth()+1);
            $('#backbundle_conge_dateFin_year').val(new Date().getFullYear());
            $('#backbundle_conge_dateFin_day').val(new Date().getDate()+2);
        })


        </script>
    {% endblock %}