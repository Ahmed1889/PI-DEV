{% extends 'base2.html.twig' %}

{% block body %}

{% for can in conge %}


     <fieldset class="col-md-6">
        <legend style="background-color: white"><img style="height: 50px;width: 50px" src="{{ asset('photos/') }}{{ can.idEmployee.image }}"></legend>
        <table class="table">
            <tr><td>Date Debut</td> <td>{{ can.dateDebut|date('Y-m-d') }}</td></tr>
            <tr><td>Date Fin</td> <td>{{ can.dateFin|date('Y-m-d') }}</td></tr>
            <tr><td>Type</td> <td>{{ can.type }}</td></tr>
            <tr><td>Etat</td> <td style="color: #ffaa00">{{ can.etat }}</td></tr>
            <tr><td><a class="fa fa-check" style="color: green" href="{{ path('accepter', {'id':can.id}) }}">Accepter</a></td> <td><a class="fa fa-exclamation" style="color: red" href="{{ path('refuser', {'id': can.id}) }}">Refuser</a></td></tr>
         </table>
     </fieldset>
{% endfor %}
    <style>
        fieldset
        {
            border: 1px solid #ddd !important;
            margin: 0;
            xmin-width: 0;
            padding: 10px;
            position: relative;
            border-radius:4px;
            background-color:#f5f5f5;
            padding-left:10px!important;
        }

        legend
        {
            font-size:14px;
            font-weight:bold;
            margin-bottom: 0px;
            width: 12%;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px 5px 5px 10px;
            background-color: #ffffff;
        }
    </style>
{% endblock %}
