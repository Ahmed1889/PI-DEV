{% extends 'base2.html.twig' %}

{% block bodyBack %}
    <h1>Historique</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ historique.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ historique.quantite }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ historique.date|date('Y-m-d')  }}</td>
            </tr>
            <tr>
                <th>Prix total</th>
                <td>{{ historique.prixtotal  }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('historique_index') }}">Retour liste</a>
        </li>
        <li>
            <a href="{{ path('historique_edit', { 'id': historique.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Effacer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
