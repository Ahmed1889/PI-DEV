{% extends 'base2.html.twig' %}
{% block body %}
    <div>
        <form action="{{ path('afficher_stock') }}" method="get">
            <label for="filter">Filtrer</label>
            <input name="filter" type="text" id="input">
            <button type="submit" class="btn btn-default btn-sm">Filtrer maintenant</button>
        </form>

    </div>
    <br>
    <h2><strong>Liste des stocks :</strong></h2>
    <br>
    <table class="table table-striped">
        <tr align="center"  >
            <td><b>{{ knp_pagination_sortable(stock, 'Id','bp.id') }}</b></td>
            <td><b>{{ knp_pagination_sortable(stock, 'Nom du produit','') }}</b></td>
            <td><b>{{ knp_pagination_sortable(stock, 'Quantite','bp.quantite') }}</b></td>
            <td><b>{{ knp_pagination_sortable(stock, 'Seuil','bp.seuil') }}</b></td>
            <td colspan="3"><b>Action</b></td>

        </tr>
        {% for s in stock %}
            <tr align=" center" >
                <td>{{s.id}}</td>
                <td>{{s.produit.libelleP}}</td>
                <td>{{ s.quantite }}</td>
                <td>{{ s.seuil }}</td>
                <td><a href="{{ path('modifier_stock',{'id':s.id}) }}"><i class="fa fa-edit" style="color:#2e6da4 " ></i></a></td>
                <td><a class="confirmModal" href="{{ path('supprimer_stock',{'id':s.id}) }}" ><i class="fa fa-trash" style="color: #ff6c5f"></i></a></td>
                <td><a href="{{ path('supprimer2_stock',{'id':s.id}) }}"><i class="fas fa-minus" style="color:#2e6da4 " ></i></a></td>
            </tr>
        {% endfor %}
    </table>
    <div class="navigation text-center">
        {{ knp_pagination_render(stock) }}
    </div>
    <a href="{{ path('ajout_stock') }}" class="sidebar-link"><i class="fas fa-plus"></i><span class="hide-menu"> ajouter stock </span></a>
    <div id="dialog-confirm" title="Confirmation de la suppression" style="display:none;">
        <p>
            <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>
            Etes-vous s√ªr de vouloir supprimer cette categorie ?
        </p>
    </div>

{% endblock %}